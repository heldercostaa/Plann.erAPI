{
  "name": "plann.er-api",
  "version": "1.0.0",
  "description": "API for Plann.er App.",
  "author": "Helder Costa",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsup src --out-dir build",
    "test:migrate": "dotenv -e .env.test prisma migrate deploy",
    "test:run": "dotenv -e .env.test vitest run",
    "test": "npm run test:migrate && npm run test:run",
    "lint": "eslint src --ext .ts --fix",
    "prepare": "husky"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@prisma/client": "^5.16.2",
    "dayjs": "^1.11.11",
    "dotenv": "^16.4.5",
    "fastify": "^4.28.1",
    "fastify-type-provider-zod": "^2.0.0",
    "nodemailer": "^6.9.14",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@types/node": "^20.14.10",
    "@types/nodemailer": "^6.4.15",
    "@types/supertest": "^6.0.2",
    "dotenv-cli": "^7.4.2",
    "eslint": "^9.6.0",
    "husky": "^9.0.11",
    "prisma": "^5.16.2",
    "supertest": "^7.0.0",
    "tsup": "^8.1.0",
    "tsx": "^4.16.2",
    "typescript": "^5.5.3",
    "vitest": "^2.0.1"
  }
}
